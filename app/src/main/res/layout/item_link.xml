<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/linkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/content_horizontal"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="@string/link_name_string" />

    <TextView
        android:id="@+id/linkURL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/content_horizontal"
        android:layout_marginStart="@dimen/content_vertical"
        android:layout_marginTop="@dimen/content_vertical"
        android:layout_marginEnd="@dimen/content_vertical"
        android:layout_marginBottom="@dimen/content_vertical"
        android:layout_toEndOf="@+id/linkName"
        android:text="@string/url_string"
        android:textColor="@color/black"
        android:textSize="18sp" />


</RelativeLayout>